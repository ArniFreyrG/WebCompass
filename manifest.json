{
    "manifest_version": 2,
    "name": "Web Pointer",
    "version": "1.0",

    "web_accessible_resources": ["jquery-2.1.3.min.map", "underscore-min.map", "backbone-min.map"], 

    "content_scripts": [{
        "matches": ["http://*/*", "https://*/*"],
        "js": ["jquery-2.1.3.min.js", "underscore-min.js", "backbone-min.js"],
        "run_at": "document_start"
        }],

    "background": {
        "persistent": true,
        "scripts": ["background.js"]
    },
    
    "browser_action": {
        "default_title": "Point you in the right direction",
        "scripts": ["content.js"],
        "css": ["styles.css"]
    },

    "permissions": [
    "tabs",
    "activeTab",
    "<all_urls>"]
}
