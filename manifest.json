{
    "manifest_version": 2,
    "name": "Web Pointer",
    "version": "1.0",
    "background": {
        "persistent": true,
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_title": "Point you in the right direction",
        "scripts": ["contentscript.js"],
        "css": ["styles.css"]
    },
    "permissions": [
    "tabs",
    "activeTab",
    "<all_urls>"]
}
