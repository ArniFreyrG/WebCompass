{
  "name": "WebPointer",
  "description": "Make the current page red",
  "version": "2.0",
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Make this page red",
    "scripts": ["content.js"]
  },
  "permissions": [
    "tabs",
    "activeTab",
    "<all_urls>"],

  "manifest_version": 2
}
